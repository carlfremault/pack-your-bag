{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["transit"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:browser": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": true,
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["src/generated/prisma/**"]
    },
    "migrate": {
      "cache": false,
      "dependsOn": ["generate"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
