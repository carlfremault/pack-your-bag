{
  "name": "pack-your-bag",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:browser": "turbo run test:browser",
    "view-report": "turbo run view-report",
    "prepare": "husky",
    "pre-commit": "turbo run lint --filter=[{staged}] && lint-staged"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.2",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "turbo run lint --affected"
    ]
  },
  "packageManager": "yarn@4.11.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
