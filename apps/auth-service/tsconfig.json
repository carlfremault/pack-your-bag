{
  "extends": "@repo/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@prisma-client": ["./src/generated/prisma"]
    },
    "noEmit": false,
    "types": ["node"]
  },
  "include": ["src/**/*", "test/**/*", "prisma/**/*.ts", "vitest.config.ts", "prisma.config.ts"],
  "exclude": ["dist", "node_modules"]
}
